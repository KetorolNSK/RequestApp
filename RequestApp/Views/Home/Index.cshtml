@model IEnumerable<Request>

<h3 class="p-2 bg-primary text-white text-center">Заявки</h3>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col font-weight-bold">Номер заявки</div>
        <div class="col font-weight-bold">Дата создания</div>
        <div class="col font-weight-bold">Дата модификации</div>
        <div class="col font-weight-bold">Статус</div>
        <div class="col font-weight-bold">Тема</div>
        <div class="col font-weight-bold">Текст заявки</div>
        <div class="col"></div>
    </div>
    <form asp-action="AddRequest" method="post">
        <div class="row p-2">
            <div class="col"></div>
            <div class="col"><input name="DateCreate" class="form-control" /></div>
            <div class="col"><input name="DateUpdate" class="form-control" /></div>
            <div class="col"><input name="Status" class="form-control" /></div>
            <div class="col"><input name="Topic" class="form-control" /></div>
            <div class="col"><input name="Text" class="form-control" /></div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </form>
    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col text-center p-2">Нет данных</div>
        </div>
    }
    else
    {
        @foreach (Request p in Model)
        {
            <div class="row p-2">
                <div class="col">@p.Id</div>
                <div class="col">@p.DateCreate</div>
                <div class="col">@p.DateUpdate</div>
                <div class="col">@p.Status</div>
                <div class="col">@p.Topic</div>
                <div class="col">@p.Text</div>
                <div class="col">
                <form asp-action="DeleteRequest" method="post">
                    <a asp-action="UpdateRequest" asp-route-key="@p.Id" class="btn btn-outline-primary">
                        Редактировать
                    </a>
                    <input type="hidden" name="Id" value="@p.Id"/>
                    <button type="submit" class="btn btn-outline-danger">
                        Удалить
                    </button>
                </form>
                </div>
            </div>
        }
    }
</div>